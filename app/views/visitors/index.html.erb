<section class="content-header">
  <h1>用户列表</h1>
  <div class="tools">
    <%= link_to "新建用户", new_visitor_path, class: 'btn btn-sm btn-primary pull-right' %>
  </div>
</section>

<section class="content container-fluid">
  <table class="table table-bordered table-condensed table-striped">
    <thead align="center">
      <tr>
        <th>编号</th>
        <th>邮箱</th>
        <th>昵称</th>
        <th>性别</th>
        <th>UID</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.id %></td>
        <td><%= visitor.email %></td>
        <td><%= visitor.nick_name %></td>
        <td><%= visitor.gender ? '男' : '女' %></td>
        <td><%= visitor.uid %></td>
        <td>
          <%= link_to '详情', visitor %>
          <%= link_to "编辑", edit_visitor_path(visitor) %>
          <%= link_to "删除", visitor, method: :delete, data: { confirm: '确认删除?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
