<section class="content-header">
  <h1>首页广告</h1>
  <div class="tools">
    <%= link_to "新建广告", new_advert_path, class: 'btn btn-sm btn-primary pull-right' %>
  </div>
</section>

<section class="content container-fluid">
  <table class="table table-bordered table-condensed table-striped">
    <thead align="center">
      <tr>
        <th>ID</th>
        <th>广告标题</th>
        <th>广告图片</th>
        <th>广告地址</th>
        <th>广告类型</th>
        <th>显示顺序</th>
        <th>状态</th>
        <th>标记删除</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @adverts.each do |advert| %>
      <tr>
        <td><%= advert.id %></td>
        <td><%= advert.title %></td>
        <td><%= image_tag advert.pic_url, size: '40x40' %></td>
        <td><%= advert.advert_url %></td>
        <td><%= advert.category %></td>
        <td><%= advert.sort %></td>
        <td><%= advert.status %></td>
        <td><%= advert.deleted ? '是' : '否' %></td>
        <td>
          <%= link_to '详情', advert %>
          <%= link_to "编辑", edit_advert_path(advert) %>
          <%= link_to "删除", advert, method: :delete, data: { confirm: '确认删除?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
