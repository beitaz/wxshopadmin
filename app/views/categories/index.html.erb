<section class="content-header">
  <h1>类型列表</h1>
  <div class="tools">
    <%= link_to "新增基本类型", new_category_path(parent_id: 0), class: 'btn btn-sm btn-primary pull-right' %>
  </div>
</section>

<section class="content container-fluid">
  <table class="table table-bordered table-condensed table-striped">
    <thead align="center">
      <tr>
        <th>基本类型</th>
        <th>子类型</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% if Category.base.present? %>
      <% Category.base.each do |base| %>
      <tr>
        <td><%= base.name %></td>
        <td><%= base.children.map(&:name).join(', ') %></td>
        <td>
          <%= link_to '新增', new_category_path(parent_id: base.id), class: 'btn btn-xs btn-primary' %>
          <%= link_to '删除', base, method: :delete, data: { confirm: '危险!此操作将同时删除所有子类型,确认删除?' }, class: 'btn btn-xs btn-primary' %>
        </td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan='3'>
        <span>暂无基本类型</span>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
