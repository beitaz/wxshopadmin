<div class="login-wrapper">
  <div class="box">
    <div class="login-content">
      <h2>登陆</h2>
      <hr/>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form'}) do |f| %>
      <% devise_error_messages! %>
      <div class="field form-group">
        <%= f.label :email, class: 'sr-only' %>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-at"></i></div>
          <%= f.email_field :email, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: '邮箱地址' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'sr-only' %>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-lock"></i></div>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '密码' %>
        </div>
      </div>

      <div class="actions form-group">
        <%= f.submit '登录', class: 'btn btn-primary btn-block' %>
      </div>
      
      <div class="field form-group links-group">
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <div class="links">
          <%= render "users/shared/links" %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
