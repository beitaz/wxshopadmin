<div class="signup-wrapper">
  <div class="box">
    <div class="signup-content">
      <h2>注册</h2>
      <hr/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'signup-form'}) do |f| %>
        <% devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email, class: 'sr-only' %>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-at"></i></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: '邮箱地址' %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: 'sr-only' %>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-lock"></i></div>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "密码（最少 #{@minimum_password_length} 个字符）" %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, class: 'sr-only' %>
          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-lock"></i></div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "确认密码（最少 #{@minimum_password_length} 个字符）" %>
          </div>
        </div>

        <div class="actions form-group">
          <%= f.submit '注册', class: 'btn btn-primary btn-block' %>
        </div>

        <div class="field form-group links-group">
          <div class="links">
            <%= render "users/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
